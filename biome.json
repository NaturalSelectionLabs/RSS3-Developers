{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"files": {
		"include": ["src/**/*"],
		"ignore": [".next", "pnpm-lock.yaml", "dist", "public"]
	},
	"formatter": {
		"enabled": true
	},
	"linter": {
		"enabled": false
	},
	"javascript": {
		"formatter": {
			"trailingComma": "all",
			"semicolons": "asNeeded"
		}
	},

	"organizeImports": {
		"enabled": true
	}
}
